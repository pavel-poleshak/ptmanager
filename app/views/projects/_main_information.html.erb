<div class="row mb-2">
  <div class="col-2">
    <%= project.name %>
  </div>
  <div class="col-3">
    <%= project.summary %>
  </div>
  <div class="col-2">
    <%= project.start_date.strftime("%d.%m.%Y") %>
  </div>
  <div class="col-2">
    <%= project.end_date.strftime("%d.%m.%Y") %>
  </div>
  <% if action_name != "show" %>
  <div class="col-1">
    <%= link_to 'Show', project, class: "btn btn-outline-info btn-block btn-sm" %>
  </div>
  <% end %>
  <% if current_user.admin? %>
  <div class="col-1">
    <%= link_to 'Edit', edit_project_path(project), class: "btn btn-outline-warning btn-block btn-sm" %>
  </div>
  <div class="col-1">
    <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-block btn-sm" %>
  </div>
  <% end %>
</div>
