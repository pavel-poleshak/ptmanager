<h4>Statuses</h4>
<div class="row">
  <div class="col-2">
      <strong>Title</strong>
  </div>
</div>

<% @statuses.each do |status| %>
<div class="row mb-2">
  <div class="col-2">
    <%= status.title %>
  </div>
  <div class="col-1">
    <%= link_to 'Edit', edit_status_path(status),  class: "btn btn-outline-warning btn-block btn-sm" %>
  </div>
  <div class="col-1">
    <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-block btn-sm" %>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-4">
    <%= link_to 'New Status', new_status_path, class: "btn btn-outline-success btn-block" %>
  </div>
</div>
