<div class="row mb-2">
  <div class="col-2">
    <%= task.title %>
  </div>
  <div class="col-3">
    <%= task.description %>
  </div>
  <div class="col-2">
    <%= task.status.title %>
  </div>
  <div class="col-2">
    <%= task.project.name %>
  </div>
  <% if action_name != "show" %>
  <div class="col-1">
    <%= link_to 'Show', task, class: "btn btn-outline-info btn-block btn-sm" %>
  </div>
  <% end %>
  <% if current_user.admin? %>
  <div class="col-1">
    <%= link_to 'Edit', edit_task_path(task), class: "btn btn-outline-warning btn-block btn-sm" %>
  </div>
  <div class="col-1">
    <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-block btn-sm" %>
  </div>
  <% end %>
</div>
