<h4>Adding New User For Task</h4>
<% if @users.empty? %>
  <strong>All users already added for this task</strong>
<% else %>
<%= form_for :user do |form| %>
  <div class="form-group">
  <%= form.collection_select(:id, @users, :id, :first_name, class: "form-control", required: true) %>
  </div>
  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-outline-success btn-lg"%>
  </div>
<% end %>
<% end %>
