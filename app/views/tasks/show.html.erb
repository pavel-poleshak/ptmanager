<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status.title %>
</p>

<p>
  <strong>Project:</strong>
  <%= @task.project.name %>
</p>

<p>
  <strong>Users</strong>
  <% @task.users.each do |user| %>
    <p><%= "#{user.first_name} #{user.last_name} #{user.id} #{@task.id}" %>
    <%= link_to "Show", task_user_path(@task, user) %>
    <%= link_to 'Unsubscribe', delete_join_user_path(@task, user), method: :delete,  userdata: { confirm: 'Are you sure?' } %>
  <% end %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
